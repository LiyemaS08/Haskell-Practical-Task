-- Main.hs
module Main where

-- Define the function *before* main
weatherReport :: String -> String
weatherReport "sunny"  = "It's a bright and beautiful day!"
weatherReport "rainy"  = "Don't forget your umbrella!"
weatherReport "cloudy" = "A bit gloomy, but no rain yet!"
weatherReport _        = "Weather unknown"

main :: IO ()
main = do
  putStrLn (weatherReport "sunny")   -- Output: It's a bright and beautiful day!
  putStrLn (weatherReport "rainy")   -- Output: Don't forget your umbrella!
  putStrLn (weatherReport "foggy")   -- Output: Weather unknown

