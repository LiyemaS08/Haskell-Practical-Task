-- Main.hs
module Main where

-- Define the function BEFORE main
dayType :: String -> String
dayType "Saturday" = "It's a weekend!"
dayType "Sunday"   = "It's a weekend!"
dayType "Monday"   = "It's a weekday."
dayType "Tuesday"  = "It's a weekday."
dayType "Wednesday"= "It's a weekday."
dayType "Thursday" = "It's a weekday."
dayType "Friday"   = "It's a weekday."
dayType _          = "Invalid day"

main :: IO ()
main = do
  putStrLn (dayType "Monday")     -- Output: It's a weekday.
  putStrLn (dayType "Saturday")   -- Output: It's a weekend!
  putStrLn (dayType "Holiday")    -- Output: Invalid day

